pipeline {
    agent any
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        
        stage('Test Cloning Files') {
            steps {
                sh 'ls distribution'
            }
        }
        stage('Build Docker compose Containers - PhpMyAdmin') {
            agent any
            steps {
                sh 'cd distribution'
                sh 'docker-compose up -d'
                sh 'sleep 30000'
                sh 'curl http://localhost:8081'
            }
        }
    }
}
